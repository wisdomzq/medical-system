	background: #2f6fec;
	border-radius: 24px;
	padding: 12px 18px;
	font-weight: 600;
}
QPushButton#PrimaryLoginBtn:hover { background: #275fd0; }
QPushButton#PrimaryLoginBtn:pressed { background: #1f4fb5; }

/* 使用 background.jpeg 作为插图背景（覆盖占位色） */
QLabel#LoginIllustration {
	image: url(:/background.jpeg);
	background-position: center;
	background-repeat: no-repeat;
}

/* 卡片内标题与控件背景清理（防止灰底） */
QWidget#LoginFormCard QLabel#LoginTitle,
QWidget#LoginFormCard QLabel,
QWidget#LoginFormCard QLineEdit {
	background: transparent;
}

QWidget#LoginFormCard {
	/* 半透明白底，保证在背景图上仍清晰可读 */
	background: rgba(255,255,255,0.92);
	border-radius: 14px;
	border: 1px solid #eef2f7;
	/* 简单阴影效果（Qt 不支持 box-shadow，用双层边模拟） */
}

/* 注册链接按钮在卡片中保持文本样式 */
QPushButton#RegisterLink {
	background: transparent;
	border: none;
}

/* 返回图标按钮样式 */
QPushButton#BackIconBtn {
	background: transparent;
	border: none;
	padding: 4px;
}
QPushButton#BackIconBtn:hover {
	background: rgba(0,0,0,0.04);
}

/* 登录表单卡片内的标题特殊样式 */
QWidget#LoginFormCard QLabel#LoginTitle {
	color: #ffffff !important;
	font-size: 24px !important;
	font-weight: bold !important;
	padding: 12px 20px !important;
	background: qlineargradient(x1: 0, y1: 0, x2: 1, y2: 0,
		stop: 0 #667eea, stop: 0.5 #764ba2, stop: 1 #667eea) !important;
	border-radius: 12px !important;
	border: 2px solid rgba(255, 255, 255, 0.2) !important;
	min-height: 20px !important;
}
