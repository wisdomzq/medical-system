/* 身份卡片：上圆形图标 + 下方按钮 */
QLabel#RoleCircle {
	/* 兼容性考虑：使用纯色代替渐变 */
	background: #d2c8f4;
	border-radius: 60px; /* 半径 = 宽高/2，形成圆形 */
	border: 0px solid transparent;
}
QWidget#SelectionGroup {
	background: #ffffff;
	border: 1px solid #e5e7eb; /* 灰色细边 */
	border-radius: 14px;
}

QWidget#RoleCard {
	background: #ffffff;
	border: 1px solid #eef2f7;
	border-radius: 12px;
	transition: all 120ms ease; /* 兼容性有限，仅部分 Qt 支持 */
}
QWidget#RoleCard:hover {
	border-color: #dbe4f3;
	/* 简易悬浮高亮：用更浅背景模拟阴影 */
	background: #fbfdff;
}

QLabel#UserTypeLabel {
	color: #111827;
	font-size: 22px;
	font-weight: 600;
	background: transparent; /* 去掉灰底条 */
	border: none;
}
QLabel#UserTypeSubLabel {
	color: #6b7280;
	font-size: 14px;
	margin-top: -6px;
	margin-bottom: 10px;
	background: transparent;
}

QPushButton#RoleBtnDoctor, QPushButton#RoleBtnPatient {
	border: none;
	border-radius: 20px; /* 圆角按钮 */
	color: #fff;
	font-weight: 600;
	padding: 12px 24px; /* 更舒展的按钮内边距 */
	min-height: 16px; /* 确保按钮有足够高度显示圆角 */
}
QPushButton#RoleBtnDoctor { /* 粉色系 */
	background: #ff9ac2;
}
QPushButton#RoleBtnDoctor:hover {
	background: #ffafcf;
}
QPushButton#RoleBtnPatient { /* 蓝青系 */
	background: #7ab3ff;
}
QLabel#RoleName {
	color: #0f172a;
	font-size: 18px;
	font-weight: 700;
	background: transparent;
}
QLabel#RoleDesc {
	color: #6b7280;
	font-size: 13px;
	background: transparent;
}

